<div class='row'>
    <div class='col-md-12 '>
        <%= link_to new_notebook_path, class: 'btn btn-primary float-right',data: {toggle: 'modal', target: '#newNotebookModal', remote: true} do %>
        <i class="fa-solid fa-circle-plus ">Add Notebook</i>
      <% end %>
    </div>
</div>
<div class="row">
  <% @notebooks.each do |notebook| %>
    <div class="col-md-3">
      <div class="card notebook-card mb-4 ">
        <div class="card-body">
          <div class='card-title d-flex justify-content-between'>
            <h5><%= link_to notebook.title,notebook %></h5>
            <div>
              <%= link_to edit_notebook_path(notebook), class: 'text-info' do %>
                <i class="fa-solid fa-pencil"></i>
              <% end %>
              <%= link_to notebook_path(notebook, format: :pdf), class: 'text-info' do %>
                <i class="fa-solid fa-file-pdf"></i>
              <% end %>
              <%= link_to notebook_path(notebook), method: :delete, data: { confirm:"Are you sure?" },class: 'text-danger' do %>
                <i class="fas fa-trash "></i>
              <% end %>
            </div>
          </div>
          <div class="stats mb-4">
            <p class="page-count">
              <%= notebook.pages.count %> pages
            </p>
          </div>
        </div>
        <div class="card-footer">
          <small class="text-muted "><b>Last modified at <%= notebook.updated_at.strftime("%A, %B, %e, %Y") %></b></small>
        </div>
      </div>
    </div>
  <% end %>
</div>
