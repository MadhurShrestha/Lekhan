<% page = image_element.page %>
<% notebook =  page.notebook %>


<div class="image-content p4 mb-2">
    <% if image_element.persisted? %>
      <% if image_element.image.present? %>
        <%= image_tag(image_element.image) %>
      <% else %>
        <%= form_with(model: [notebook, page, image_element]) do  |form|%>
          <%= form.file_field :image %>
          <div class="buttons mt-3">
            <%= form.submit "Save", class: 'btn btn-outline-primary' %>
            <% end %>
        <% end %>
        <%= link_to notebook_page_image_element_path(notebook,page,image_element), method: :delete, class: 'delete-btn btn btn-outline-danger ', data: {confirm: "Are you sure?" } do%>
        <i class="fas fa-trash"></i>
      <% end %>
          </div>

    <% end %>
  </div>
