

<div class="container">

  <!-- Outer Row -->
  <div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">To my diary!</h1>
                </div>
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                  <div class="form-group">
                    <%= f.text_field :login, autofocus: true, autocomplete: "Username or Email",class:"form-control form-control-user",
                    id:"exampleInputEmail", placeholder:"Enter Email Address or Username" %>

                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, autofocus: true, autocomplete: "current-password",class:"form-control form-control-user",
                    id:"exampleInputEmail", placeholder:"Your Password" %>
                  </div>
                  <div class="form-group">
                    <% if devise_mapping.rememberable? %>
                        <div class="custom-control custom-checkbox small">
                          <%= f.check_box :remember_me,class: 'custom-control-input' %>
                          <%= f.label :remember_me,class: "custom-control-label" %>
                        </div>
                    <% end %>

                  </div>
                  <%= f.submit "Log in",class: 'btn btn-primary btn-user btn-block' %>

                  <hr>

                <% end %>
                <div class="text-center">
                  <%= link_to 'Forgot Password?', new_user_password_path, class: 'small' %>
                </div>
                <div class="text-center">
                  <%= link_to 'New to Journal It? Sign Up Now!', new_user_registration_path, class: 'small' %>
                </div>
                <div class="text-center">
                  <%= link_to "Didn't receive confirmation email?", new_confirmation_path(resource_name) , class: 'small'%><br />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>

</div>

