<h4 class='d-flex justify-content-between  mb-4'>
  <div>
    <%= @page.title %>
    <%= link_to 'Edit', edit_notebook_page_path(@notebook,@page),class: 'btn btn-outline-primary' %>
  </div>

  <div>
    <%= form_with(model: [@notebook, @page, @paragraph], html: { class: 'float-start'}) do  |form|%>
      <%= form.submit "Add paragraph", class: 'btn btn-primary me-1' %>
    <% end %>
    <%= form_with(model: [@notebook, @page, @image_element], html: { class: 'float-start'}) do  |form|%>
      <%= form.submit "Add Image", class: 'btn btn-primary me-1' %>
    <% end %>
     <%= form_with(model: [@notebook, @page, @checklist], html: { class: 'float-start'}) do  |form|%>
      <%= form.submit "Add Checklist", class: 'btn btn-primary' %>
    <% end %>
  </div>
</h4>


<div class="col-lg-10 offset-lg-1">

  <% @page.paragraphs.each do |paragraph| %>
    <% if paragraph.persisted? %>
      <div class="text-content p-4 mb-2">
        <% if paragraph.content.present? %>
          <%= paragraph.content %>
        <% else %>
          <i>Click here to add text </i>
        <% end %>
      </div>
      <div class="form-content d-none p-4 mb-2">
        <%= form_with(model: [@notebook, @page, paragraph]) do  |form|%>
          <%= form.rich_text_area :content %>
          <div class="buttons mt-3">
            <%= form.submit "Save", class: 'btn btn-primary' %>
            <a href="#" class="cancel btn btn-secondary">Cancel</a>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>


<% @page.image_elements.each do |image_element| %>
  <div class="image-content p4 mb-2">
    <% if image_element.persisted? %>
      <% if image_element.image.present? %>
        <%= image_tag(image_element.image) %>
      <% else %>
        <%= form_with(model: [@notebook, @page, image_element]) do  |form|%>
          <%= form.file_field :image %>
          <div class="buttons mt-3">
            <%= form.submit "Save", class: 'btn btn-primary' %>
            <!-- <a href="#" class="cancel btn btn-secondary">Cancel</a> -->
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>

<% @page.checklists.each do |checklist| %>
  <% if checklist.persisted? %>
  <div class="p-4">
    <div class="text-content mb-2 p-2">
      <% if checklist.title.present? %>
        <h4 class="m-0"><%=checklist.title %></h4>
      <% else %>
        <h4 class="m-0">Click to add title</h4>
      <% end %>
    </div>
      <div class="form-content d-none mb-2">
        <%= form_with(model: [@notebook, @page, checklist]) do  |form|%>
        <label>Checklist Title</label>
          <%= form.text_field :title, class: 'form-control' %>
          <div class="buttons mt-3">
            <%= form.submit "Save", class: 'btn btn-primary' %>
            <a href="#" class="cancel btn btn-secondary">Cancel</a>
          </div>
        <% end %>
      </div>
        <div class="checklist-item-form">
           <%= form_with(model: [@notebook, @page,checklist, checklist.new_item]) do  |form|%>
          <div class="input-group">
             <%= form.text_field :title, class: 'form-control' ,placeholder: "Add a new checklist item" %>
            <div class="input-group-append">
              <%= form.submit "Save",class: 'btn btn-dark' %>
            </div>
          </div>
          <% end %>
        </div>
        <div class="checklist-items mt-2">
          <div class="progress mb-3">
        <% percent_complete = checklist.percent_complete %>
        <% percent_in_progress = checklist.percent_in_progress %>

        <div class="progress-bar bg-success" role="progressbar" style="width: <%= percent_complete %>%" aria-valuenow="<%= percent_complete %>" aria-valuemin="0" aria-valuemax="100"></div>
        <div class="progress-bar bg-info" role="progressbar" style="width: <%= percent_in_progress %>%" aria-valuenow="<%= percent_in_progress %>" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
          <ul class="list-group">
            <% checklist.checklist_items.each do |checklist_item| %>
              <% if checklist_item.persisted? %>
                <li class="list-group-item d-flex justify-content-between">
                  <span><%= checklist_item.title %> </span>
                  <div>
                    <div class="dropdown float-start">
                        <button class="btn btn-sm me-1 btn-outline<%= checklist_item.color_class %> dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <%= checklist_item.readable_status %>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                          <% ChecklistItem::STATUS_OPTIONS.each do |status| %>
                            <a class="dropdown-item" href="#"
                            data-reflex="click->ChecklistItemReflex#change_status"
                            data-id="<%= checklist_item.id %>"
                            data-status="<%= status[1] %>">
                              <%= status[0] %>
                            </a>
                          <% end %>
                        </div>
                      </div>
                    <%= link_to notebook_page_checklist_checklist_item_path(@notebook,@page,checklist, checklist_item), method: :delete, data: { confirm:"Are you sure?" } do %>
                    <i class="fas fa-times text-danger"></i>
                    <% end %>
                  </div>
                </li>
              <% end  %>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
