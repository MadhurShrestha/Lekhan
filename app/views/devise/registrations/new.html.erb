



<div class="container">
  <div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
      <!-- Nested Row within Card Body -->
      <div class="row">
        <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
        <div class="col-lg-7">
          <div class="p-5">
            <div class="text-center">
              <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
            </div>
            <%= form_for(resource, as: resource_name, class: 'user', url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :username %><br />
              <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control form-control-user" %>
            </div>

            <div class="form-group">
              <%= f.label :email %><br />

              <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-user" %>
            </div>


            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />

            <div class="form-group row">

              <div class="col-sm-6 mb-3 mb-sm-0">

                <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-user" %>
              </div>
              <div class="col-sm-6">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-user" %>
              </div>
            </div>

            <%= f.submit "Register Account", class: "btn btn-primary btn-user btn-block" %>
            <% end %>
            <hr>
            <div class="text-center">
              <%= link_to 'Forgot Password?', new_user_password_path, class: 'small' %>
            </div>
            <div class="text-center">
              <%= link_to 'Go to my journal! ', new_user_session_path, class: 'small' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="field">
  <%= f.label :username %><br />
  <%= f.text_field :username, autofocus: true , placeholder: 'Ex: Aayush'%>
</div>

<div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, autocomplete: "email" , placeholder: 'Ex: aayushstha@gmail.com'%>
</div>

<div class="field">
  <%= f.label :password %>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "new-password" %>
</div>

<div class="field mb-2">
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Retype the new password' %>
</div>


<div class="actions">
  <%= f.submit "Sign up", class:'btn btn-primary' %>
</div>
<% end %>


<%= render "devise/shared/links" %>
